// data table
v-data-table( v-bind='_tableProps' )

  // data table top
  template( slot='top' )

    // data table toolbar
    v-toolbar( v-bind='toolbarProps' )
      v-toolbar-title( v-bind='titleProps' ) {{ label }}
      v-spacer
      v-toolbar-items( v-bind='itemsProps' )
        slot( name='items' )
        vw-btn( bottom icon tip='Agregar' @click='onClickNew' )
          v-icon mdi-pencil-plus
        vw-btn( bottom icon tip='Agregar' @click='onClickAdd' )
          v-icon mdi-table-plus

    // data table dialog
    vw-dialog-table( v-bind='dialogProps' v-model='dialogs.picker' @submit='onSubmit' )

    // form dialog
    vw-dialog-form( v-bind='dialogFormProps' v-model='dialogs.form' @submit='onSubmitForm' )
      