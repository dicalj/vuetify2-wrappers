// data table
v-data-table( 
  :headers='columns'
  :items='value' 
  v-bind='tableProps' 
  v-model='selected' 
  )

  // data table actions slot
  template( slot='item.$actions' slot-scope='props' )
    slot( name='actions' v-bind='props' )


  // data table top
  template( slot='top' )

    // data table toolbar
    v-toolbar( v-bind='toolbarProps' )
      v-toolbar-title( v-bind='titleProps' ) {{ label }}
      v-spacer
      v-toolbar-items( v-bind='itemsProps' )
        slot( name='items' )
      