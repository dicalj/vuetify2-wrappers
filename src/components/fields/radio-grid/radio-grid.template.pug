v-radio-group( v-bind='groupProps' v-model='_value' )
  table
    thead
      tr
        template( v-for='header in headers' )
          th {{ header[headerText] }}
    tbody
      template( v-for='item in items' )
        tr
          template( v-for='header in headers' )
            td
              v-radio( 
                :label='item[itemText]'
                :value='item[itemValue]'
                v-bind='radioProps'
                )