v-simple-table( v-bind='tableProps' )
  template( slot='default' )
    thead
      tr
        th
        template( v-for='header in headers' )
          th.text-center.pl-3 {{ header[headerText] }}
    tbody
      template( v-for='(item, idx) in items' )
        tr
          td {{ item[itemText] }}
          template( v-for='(header, jdx) in headers' )
            td.text-center
              v-radio-group( v-bind='radioGroupProps' v-model='value[idx]' )
                v-radio.justify-space-around( 
                  :value='jdx'
                  v-bind='radioProps'
                  )