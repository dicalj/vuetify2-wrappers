table( style='width: 100%;' )
  thead
    tr
      th
      template( v-for='header in headers' )
        th {{ header[headerText] }}
  tbody
    template( v-for='item in items' )
      tr
        td {{ item[itemText] }}
        template( v-for='header in headers' )
          td.text-center
            v-radio.justify-space-around( 
              :value='item[itemValue]'
              v-bind='radioProps'
              )